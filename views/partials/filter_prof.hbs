
{{!-- filters for listings --}}
<h5>Ακίνητο για:</h5>
<input type="radio" name="rent_sale" value="0" checked> Πώληση<br>
<input type="radio" name="rent_sale" value="1"> Ενοικίαση<br>
			
<hr>

<h5>Τύπος ακινήτου</h5>
<select id="type">
	<option value="0">Κατοικία</option>
	<option value="1" selected>Επαγγελματικός</option>
	<option value="2">Γη</option>
</select>

<select id="subtype">
	<option value="0">Γραφείο</option>
	<option value="1">Αποθήκη</option>
	<option value="2">Οικοδομή</option>
	<option value="3">Ξενοδοχείο</option>
	<option value="4">Επιχειρηματικός Χώρος</option>
	<option value="5">Εκθεσιακός Χώρος</option>
	<option value="6">Κατάστημα</option>
	<option value="7">ΆΛλο</option>
</select>

<hr>

<h5>Διάστημα τιμής</h5>
{{#if filters.price_start}}
<input type="text" id="price_from" placeholder="{{filters.price_start}}">
{{else}}
<input type="text" id="price_from" placeholder="Από">
{{/if}}
{{#if filters.price_end}}
<input type="text" id="price_to" placeholder="{{filters.price_end}}">
{{else}}
<input type="text" id="price_to" placeholder="Εώς">
{{/if}}

<h5>Εμβαδόν</h5>
{{#if filters.area_start}}
<input type="text" id="area_from" placeholder="{{filters.area_start}}">
{{else}}
<input type="text" id="area_from" placeholder="Από">
{{/if}}
{{#if filters.area_end}}
<input type="text" id="area_to" placeholder="{{filters.area_end}}">
{{else}}
<input type="text" id="area_to" placeholder="Εώς">
{{/if}}

<hr>

<h5>Κατάσταση ακινήτου</h5>
<input type="checkbox" id="new" name="new" value="new">
<label for="new">Νεόδμητο</label><br>
<input type="checkbox" id="renovated" name="renovated" value="renovated">
<label for="renovated">Ανακαινισμένο</label><br>
<input type="checkbox" id="good" name="good" value="good">
<label for="good">Καλή κατάσταση</label><br>
<input type="checkbox" id="old" name="old" value="old">
<label for="old">Χρήζει ανακαίνισης</label><br>

<hr>

<h5>Χώροι</h5>
<input type="text" inputmode="numeric" id="rooms_from" placeholder="Από">
<input type="text" inputmode="numeric" id="rooms_to" placeholder="Εώς">
<h5>Όροφος</h5>
<input type="text" inputmode="numeric" id="floor_from" placeholder="Από">
<input type="text" inputmode="numeric" id="floor_to" placeholder="Εώς">
<h5>Έτος κατασκευής</h5>
<input type="text" inputmode="numeric" id="year_from" placeholder="Από">
<input type="text" inputmode="numeric" id="year_to" placeholder="Εώς">
			
<hr>

<h5>Επιπλέον Χαρακτηριστικά</h5>
<input type="checkbox" id="parking" name="parking" value="parking">
<label for="parking">Πάρκινγκ</label><br>
<input type="checkbox" id="elevator" name="elevator" value="elevator">
<label for="elevator">Ανελκυστήρας</label><br>
<input type="checkbox" id="storage" name="storage" value="storage">
<label for="storage">Αποθήκη</label><br>
<input type="checkbox" id="alarm" name="alarm" value="alarm">
<label for="alarm">Συναργεμός</label><br>
<input type="checkbox" id="loading_dock" name="loading_dock" value="loading_dock">
<label for="loading_dock">Πλατφόρμα φορτοεκφόρτωσης</label><br>
<input type="checkbox" id="fireplace" name="fireplace" value="fireplace">
<label for="fireplace">Πυροσβεστήρας</label><br>
<input type="checkbox" id="aircondition" name="aircondition" value="aircondition">
<label for="aircondition">Κλιματισμός</label><br>

<hr>

<h5>Είδος Ζώνης</h5>
<input type="checkbox" id="home" name="home" value="home">
<label for="home">Οικιστική Ζώνη</label><br>
<input type="checkbox" id="commercial" name="commercial" value="commercial">
<label for="commercial">Εμπορική Ζώνη</label><br>
<input type="checkbox" id="industrial" name="industrial" value="industrial">
<label for="industrial">Βιομηχανική Ζώνη</label><br>
<input type="checkbox" id="agricultural" name="agricultural" value="agricultural">
<label for="agricultural">Γεωργική Ζώνη</label><br>
<input type="checkbox" id="forest" name="forest" value="forest">
<label for="forest">Δασική Ζώνη</label><br>
<input type="checkbox" id="tourist" name="tourist" value="tourist">
<label for="tourist">Τουριστική Ζώνη</label><br>

<hr>

<h5>Είδος Θέρμανσης</h5>
<select name="heating" id="heating">
	<option value="autonomous">Αυτόνομη</option>
	<option value="central">Κεντρική</option>
</select>
<h5>Μέσο Θέρμανσης</h5>
<select>
	<option value="oil">Πετρέλαιο</option>
	<option value="gas">Φυσικό αέριο</option>
	<option value="wood">Ξύλο</option>
	<option value="electricity">Ηλεκτρικό</option>
	<option value="geothermal">Γεωθερμικό</option>
	<option value="solar">Ηλιακό</option>
	<option value="aircondition">Κλιματισμός</option>
</select>

<hr>