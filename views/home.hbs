{{> header}}

<main>
    <h1>
        Βρες την κατάλληλη αγγελία για εσένα!
    </h1>
    <form class="search" method="get" action="/search">
        <div class="listing_type">
            <input type="radio" name="type" value="sell" id="sell" checked/>
            <label for="sell">Πωλήσεις</label>

            <input type="radio" name="type" value="rent" id="rent"/>
            <label for="rent">Ενοικιάσεις</label>
        </div>

        <div class="search_bar">
            <div class="search_input">
                <label for="location">Περιοχή</label>
                <input type="search" name="location" placeholder="π.χ. Χαλάνδρι, Πειραιάς"><br>
            </div>
            <div class="search_input">
                <label for="category">Κατηγορία</label>
                <select id="category" name="category">
                    <option value="residential" selected> Κατοικία</option>
                    <option value="comercial"> Επαγγελματικό</option>
                    <option value="land"> Γη</option>
                </select>
            </div>

            <div class="search_input">
                <label for="price">Τιμή</label>
                <span class="ranges">
                    <input type="text" name="price_start" placeholder="€ Από">
                    <input type="text" name="price_end" placeholder="€ Εώς">
                </span>
            </div>

            <div class="search_input">
                <label for="area">Εμβαδόν</label>
                <span class="ranges">
                    <input type="text" name="area_start" placeholder="τ.μ. Από">
                    <input type="text" name="area_end" placeholder="τ.μ. Εώς">
                </span>
            </div>
            <div class="submit_button">
                <input type="submit" value="Αναζήτηση" class="search_button">
            </div>
        </div>
    </form>
</main>