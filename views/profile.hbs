{{> header}}

<hr class="box-shadow">

<main>
<div class="main">

<h3>Το Προφίλ σου</h3>

    <form class="profile" method="post">
        <div>
            <h4>Προσωπικά Στοιχεία</h4>
            <div>
                <label for="first_name">Όνομα:</label>
                <input type="text" id="first_name" name="first_name" placeholder="{{#if user.first_name}}{{user.first_name}}{{else}}Όνομα{{/if}}">
            </div>
            <div>
                <label for="last_name">Επώνυμο:</label>
                <input type="text" id="last_name" name="last_name" placeholder="{{#if user.last_name}}{{user.last_name}}{{else}}Επώνυμο{{/if}}">
            </div>
        </div>
        <div>
            <h4>Στοιχεία Επικοινωνίας</h4>
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="{{#if user.email}}{{user.email}}{{else}}Email{{/if}}">
            </div>
            <div>
                <label for="phone">Τηλέφωνο:</label>
                <input type="text" id="phone" name="phone" placeholder="{{#if user.phone}}{{user.phone}}{{else}}Τηλέφωνο{{/if}}">
            </div>
        </div>
        <input type="submit" value="Αποθήκευση" class="save">
    </form>
</div>

    <div class="favorites">
        <div class="nav-fave">
        <h4>Αγαπημένες Αγγελίες</h4>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                        </li>
                    </ul>
                </nav>
            </div>

        <div class="cards_div d-flex justify-content-left flex-wrap">
            {{#if user.favoriteListings}}
                {{#each user.favoriteListings as |listing|}}
                    {{> searchCard listing=listing}}
                {{/each}}
            {{else}}
                <p>Δεν έχεις αγαπημένα</p>
            {{/if}}
        </div>
    </div>
    </main>

<script>
    document.querySelector("header img").setAttribute("src", "/icons/logo_dark.svg");
</script>