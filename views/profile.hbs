{{> header}}

<hr class="box-shadow">

<main>

<h3>Το Προφίλ σου</h3>

    <div class="profile">
        <div>
            <h4>Προσωπικά Στοιχεία</h4>
            <div>
                <label for="name">Όνομα:</label>
                <input type="text" id="name" name="name" placeholder="Όνομα">
            </div>
            <div>
                <label for="surname">Επώνυμο:</label>
                <input type="text" id="surname" name="surname" placeholder="Επώνυμο">
            </div>
        </div>
        <div>
            <h4>Στοιχεία Επικοινωνίας</h4>
            <div>
                <label for="Email">Email:</label>
                <input type="email" id="Email" name="Email" placeholder="email">
            </div>
            <div>
                <label for="phone">Τηλέφωνο:</label>
                <input type="text" id="phone" name="phone" placeholder="Τηλέφωνο">
            </div>
        </div>
        <input type="submit" value="Αποθήκευση" class="save">
    </div>

    <div class="favorites">
        <div class="nav-fave">
                <h4>Αγαπημένες Αγγελίες</h4>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="cards_div d-flex justify-content-left flex-wrap">
                {{#if listings}}
                    {{#each listings as |listing|}}
                        {{> searchCard listing=listing}}
                    {{/each}}
                {{else}}
                    <p>Δεν έχεις αγαπημένα</p>
                {{/if}}
            </div>
    </div>
</main>

<script>
    document.querySelector("header img").setAttribute("src", "/icons/logo_dark.svg");
</script>